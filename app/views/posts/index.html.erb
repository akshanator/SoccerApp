<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.description %></td>
        <td><%= post.user_id %></td
        <td><%= image_tag post.image.url %></td>
        <td><%= link_to 'Show', post, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-danger" %>
