<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.description %></td>
        <td><%= post.user_id %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post, class: "btn btn-danger" %></td>
        <% if current_user == post.user_id %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-danger" %>
