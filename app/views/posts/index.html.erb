<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.description %></td>
        <td><%= post.user.email if post.user %></td>
        <td><%= image_tag post.image.url %></td>
        <td><%= link_to 'Show', post, class: "btn btn-danger" %></td>
        <% if post.user == current_user %>
          <td> <%= link_to 'Edit', edit_post_path(post), class: "btn btn-danger" %> </td>
          <td> <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path, class: "btn btn-danger" %>
<% end %>
